<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.jboss.ide.eclipse.as.core.behaviourExtension">
      <behaviour
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="org.jboss.ide.eclipse.as.systemCopyServer"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEBehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBossStartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesJBoss6OrLower"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7BehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7StartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesJBoss7"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEWildfly8BehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7StartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesWildfly8"
            typeId="rse">
      </behaviour>
   </extension>
   <!-- NEW_SERVER_ADAPTER  Add the new RSE behaviour delegate if needed for the new server above this line -->
   
   
   
   <extension
         point="org.jboss.ide.eclipse.as.wtp.core.serverSubsystem">
      <subsystem
            system="deploymentOptions"
            id="deploymentOptions.rse"
            name="Server Deployment Settings (RSE)"
            serverTypes="%AllJBTServerTypes"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEDeploymentOptionsController">
         <properties>
            <property
                  key="target"
                  value="rse">
            </property>
         </properties>
      </subsystem>
      <subsystem
            system="filesystem"
            id="filesystem.rse"
            name="Filesystem (RSE)"
            serverTypes="%AllJBTServerTypes"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEFilesystemController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystem
            system="serverDetails"
            id="serverDetails.rse"
            name="Server Details (RSE)"
            serverTypes="%AllJBTServerTypes"
            class="org.jboss.ide.eclipse.as.rse.core.RSEServerModeDetails">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystem
            system="launch"
            id="launch.standard.rse"
            name="Launch JBoss Server (RSE)"
            serverTypes="%AllJBossServerTypes"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEJBossLaunchController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystem
            system="shutdown"
            id="shutdown.rse.commandline"
            name="Shutdown Server (Remote Command Line)"
            serverTypes="%ServerTypesJBoss6OrLower"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSECommandLineShutdownController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
	</extension>
</plugin>
